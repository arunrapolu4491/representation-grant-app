{
    "compilerOptions": {
      "target": "es6",
      "outDir": "dist",
      "skipLibCheck": true, //Required for Survey JS
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "es6", "es2019"],
      "baseUrl": "../",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "*.ts",
      "../src/**/*.ts",
      "../src/**/*.tsx",
      "../src/**/*.vue",
      "../tests/**/*.ts",
      "../tests/**/*.tsx"
    ],
    "exclude": ["node_modules"]
  }
  